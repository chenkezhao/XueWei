<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skin_colorPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/skin_colorPrimaryDark</item>
        <item name="colorAccent">@color/skin_colorAccent</item>
        <item name="android:textColorPrimary">@color/skin_colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/skin_colorTextSecondary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>